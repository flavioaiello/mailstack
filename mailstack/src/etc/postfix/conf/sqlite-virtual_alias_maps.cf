dbpath = /database/mailstack.db
query =
  SELECT destination
   FROM
     (SELECT destination, email, wildcard, localpart FROM alias
      UNION
      SELECT email AS destination, email, 0 as wildcard, localpart FROM user)
   WHERE
     (
      wildcard = 0
      AND
      email = '%s'
     ) OR (
      wildcard = 1
      AND
      '%s' LIKE email
     )
   ORDER BY
     wildcard ASC,
     length(localpart) DESC
   LIMIT 1
